generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      String   @default("CUSTOMER") // CUSTOMER, ADMIN, DELIVERY_AGENT
  phone     String?
  createdAt DateTime @default(now())

  orders       Order[]
  chatMessages ChatMessage[]
}

model Product {
  id          String  @id @default(cuid())
  name        String
  subtitle    String
  description String
  price       Float
  rating      Float
  reviews     Int
  image       String
  category    String
  available   Boolean @default(true)

  orderItems OrderItem[]
}

model Order {
  id             String   @id @default(cuid())
  userId         String
  status         String   @default("PENDING") // PENDING, ACCEPTED, PREPARING, OUT_FOR_DELIVERY, DELIVERED, CANCELLED
  deliveryMethod String   @default("DELIVER") // DELIVER, PICKUP
  address        String?
  totalAmount    Float
  deliveryFee    Float    @default(1.0)
  note           String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user          User           @relation(fields: [userId], references: [id])
  items         OrderItem[]
  orderDelivery OrderDelivery?
}

model OrderItem {
  id        String @id @default(cuid())
  orderId   String
  productId String
  quantity  Int
  size      String @default("M")
  price     Float

  order   Order   @relation(fields: [orderId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}

model DeliveryAgent {
  id        String  @id @default(cuid())
  name      String
  phone     String
  image     String?
  available Boolean @default(true)

  deliveries OrderDelivery[]
}

model OrderDelivery {
  id        String   @id @default(cuid())
  orderId   String   @unique
  agentId   String
  status    String   @default("ASSIGNED") // ASSIGNED, PICKED_UP, ON_THE_WAY, DELIVERED
  eta       Int      @default(15) // minutes
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  order Order         @relation(fields: [orderId], references: [id])
  agent DeliveryAgent @relation(fields: [agentId], references: [id])
}

model ChatMessage {
  id        String   @id @default(cuid())
  orderId   String
  senderId  String
  message   String
  createdAt DateTime @default(now())

  sender User @relation(fields: [senderId], references: [id])
}
